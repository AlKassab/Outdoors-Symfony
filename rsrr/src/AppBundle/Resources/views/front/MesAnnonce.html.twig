{% extends 'AppBundle:Layouts:layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href='http://fonts.googleapis.com/css?family=Merriweather' rel='stylesheet' type='text/css'>
    <link href="{{ asset('plugins/videojs/video.css') }}" rel="stylesheet">
    <link href="{{ asset('plugins/magnific/magnific-popup.min.css') }}" rel="stylesheet">

    <script type="text/javascript" src="{{ asset('jTable/jquery-2.1.4.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('jTable/jquery.dataTables.min.js') }}"></script>
    <script type="text/javascript">$(document).ready(function() {
            $('#example').DataTable();
        } );
    </script>

{% endblock stylesheets %}


{% block content %}

    <br> <br> <br>
    <div class="col-lg-8 box-form col-lg-offset-2">
        <h2>Mes <strong>Annonces</strong></h2>

    </div>
    <div class="row">
        <div class="col-lg-6 portlets col-lg-offset-2">
            <div class="panel">

                <div class="panel-content">

                    <table id="example" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th> Image</th>
                            <th> Titre</th>

                            <th> Type</th>
                            <th> Catégorie </th>
                            <th> Prix </th>

                            <th> Action</th>
                        </tr>
                        </thead>
                        <tfoot>

                        <tr>
                            <th> Image</th>
                            <th> Titre</th>

                            <th> Type</th>
                            <th> Catégorie </th>
                            <th> Prix </th>

                            <th> Action</th>
                        </tr>
                        </tfoot>

                        <tbody>
                        {% for an in annonces %}

                            <tr>
                                <td>   <img width="150" height="150" src="{{ asset('images/products/'~an.imageName) }}" alt="9"/>
                                </td>
                                <td>{{ an.nom }} </td>

                                <td> {{ an.type }} </td>
                                <td>  {{ an.categorie }}</td>
                                <td>  {{ an.prix }} $</td>
                                <td>

                                    <a href="{{ path('edit',{'id': an.idAnnonce}) }}"><button type="button" class="btn btn-primary" >Edit</button></a>
                                    &nbsp;

                                    <a href="{{ path('delete',{'id': an.idAnnonce}) }}"><button type="button" class="btn btn-danger" >Delete</button></a>
                                </td>

                                    </br>

                            </tr>

                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
    </div>

    </div>
    {% endblock content %}