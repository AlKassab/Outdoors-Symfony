{% extends 'AppBundle:Layouts:layout.html.twig' %}

{% block body %}
    <h1>Profils list</h1>

    <table>
        <thead>
            <tr>
                <th>Idprofil</th>
                <th>Nom</th>
                <th>Localisation</th>
                <th>Photoprofil</th>
                <th>Coverphoto</th>
                <th>Detail</th>
                <th>Sexe</th>
                <th>Tel</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for profil in profils %}
            <tr>
                <td><a href="{{ path('profil_show', { 'idProfil': profil.idProfil }) }}">{{ profil.idProfil }}</a></td>
                <td>{{ profil.nom }}</td>
                <td>{{ profil.localisation }}</td>
                <td>{{ profil.photoProfil }}</td>
                <td>{{ profil.coverPhoto }}</td>
                <td>{{ profil.detail }}</td>
                <td>{{ profil.sexe }}</td>
                <td>{{ profil.tel }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('profil_show', { 'idProfil': profil.idProfil }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('profil_edit', { 'idProfil': profil.idProfil }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('profil_new') }}">Create a new profil</a>
        </li>
    </ul>
{% endblock %}
