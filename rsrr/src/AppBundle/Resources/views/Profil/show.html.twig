{% extends 'AppBundle:Layouts:layout.html.twig' %}

{% block body %}
    <h1>Profil</h1>

    <table>
        <tbody>
            <tr>
                <th>Idprofil</th>
                <td>{{ profil.idProfil }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ profil.nom }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ profil.localisation }}</td>
            </tr>
            <tr>
                <th>Photoprofil</th>
                <td>{{ profil.photoProfil }}</td>
            </tr>
            <tr>
                <th>Coverphoto</th>
                <td>{{ profil.coverPhoto }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ profil.detail }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ profil.sexe }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ profil.tel }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('profil_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('profil_edit', { 'idProfil': profil.idProfil }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
