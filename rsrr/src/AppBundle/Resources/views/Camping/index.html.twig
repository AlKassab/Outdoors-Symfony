{% extends "AppBundle:Layouts:layout.html.twig" %}
{% block content %}
    <div class="page-content">
        <div class="row">
            <div class="col-lg-12">
                <!-- BEGIN TIMELINE CONTENT -->
                <div class="timeline-btn-day"> <i class="icon-custom-left"></i>
                    <button type="button" class="btn btn-primary f-16"><strong>TimeLine</strong></button>
                </div>
                <section id="timeline">
                    {% for t in campings %}
                    <div class="timeline-block">
                        <div class="timeline-icon bg-primary">
                            <i class="icon-picture"></i>
                        </div>
                        <div class="timeline-content">
                            <div class="timeline-heading clearfix">
                                <h2 class="pull-left">Camping <strong>{{ t.nom }}</strong></h2>
                                <div class="pull-right">
                                    <div class="pull-left">
                                        <div class="timeline-day-number">{{ t.date|date('d') }}</div>
                                    </div>
                                    <div class="pull-left">
                                        <div class="timeline-day">{{ t.date|date('m') }}</div>
                                        <div class="timeline-month c-gray">{{ t.date|date('y') }}</div>
                                    </div>
                                </div>
                            </div>
                            <p> {{ t.description }}</p>
                            <a href="{{ path('camping_show', { 'idCamp': t.idCamp }) }}"><img src="data:image/png;base64,{{ t.image }}"></a>
                        </div>
                    </div>
                    {% endfor %}





                </section>

            </div>
        </div>
        <div class="footer">
            <div class="copyright">
                <p class="pull-left sm-pull-reset">
                    <span>Copyright <span class="copyright">Â©</span> 2015 </span>
                    <span>THEMES LAB</span>.
                    <span>All rights reserved. </span>
                </p>
                <p class="pull-right sm-pull-reset">
                    <span><a href="#" class="m-r-10">Support</a> | <a href="#" class="m-l-10 m-r-10">Terms of use</a> | <a href="#" class="m-l-10">Privacy Policy</a></span>
                </p>
            </div>
        </div>
    </div>
    <script src="{{ asset('plugins/jquery/jquery-1.11.1.min.js') }}"></script>
    <script src="{{ asset('plugins/jquery/jquery-migrate-1.2.1.min.js')}}" ></script>
    <script src="{{asset('plugins/jquery-ui/jquery-ui-1.11.2.min.js')}}"></script>
