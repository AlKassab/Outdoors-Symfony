{% extends "AppBundle:Layouts:layout.html.twig" %}


{% block content %}

    {% if app.user.role == "ROLE_ADMIN" %}

        <div class="col-lg-8 portlets col-lg-offset-2">
            <br><br>
            <div class="panel">
                <div class="panel-header panel-controls">
                    <h3><i class="fa fa-table"></i> <strong>All users</strong> Table</h3>
                </div>
                <div class="panel-content">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Username</th>
                            <th>Ban</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                        <tr>
                            <td>{{ user.idUtilisateur }}</td>
                            <td>{{ user.name }}</td>
                            <td>{{ user.surname }}</td>
                            <td>@{{ user.username }}</td>
                            <td><a href="{{ path('suppr',{'r':user.idUtilisateur  }) }}">Delete</a> </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>





    {% endif %}



{% endblock %}